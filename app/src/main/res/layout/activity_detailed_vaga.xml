<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/teste_1"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/menu_btn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerInside"
            android:contentDescription="@string/menu"
            android:src="@drawable/baseline_menu_24"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="293dp"
            android:layout_height="48dp"
            android:text="Ofertas/Vagas"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.737"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.018" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="400dp"
            android:layout_height="450dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="220dp"
            android:background="@android:color/transparent"
            android:foreground="@drawable/border_black"
            android:padding="2dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:padding="2dp"
                android:text="Área:"
                android:textAlignment="viewEnd"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailed_Vagas_Area"
                android:layout_width="287dp"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                android:foreground="@drawable/border_black"
                android:padding="2dp"
                android:text="Area" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="15dp"
                android:padding="2dp"
                android:text="Habilitação mínima:"
                android:textAlignment="viewEnd"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailed_Vagas_Habilitacao"
                android:layout_width="287dp"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="95dp"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                android:foreground="@drawable/border_black"
                android:padding="2dp"
                android:text="Habilitação"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.244" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="130dp"
                android:layout_marginEnd="15dp"
                android:padding="2dp"
                android:text="Data de Abertura:"
                android:textAlignment="viewEnd"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="190dp"
                android:layout_marginEnd="15dp"
                android:padding="2dp"
                android:text="Descrição"
                android:textAlignment="viewEnd"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="215dp"
                android:layout_marginTop="130dp"
                android:layout_marginEnd="15dp"
                android:padding="2dp"
                android:text="Localização:"
                android:textAlignment="viewEnd"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailed_Vagas_Localizacao"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="215dp"
                android:layout_marginTop="155dp"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                android:foreground="@drawable/border_black"
                android:padding="2dp"
                android:text="Localizacao"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.244" />

            <TextView
                android:id="@+id/detailed_Vagas_Data_Criacao"
                android:layout_width="167dp"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="155dp"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                android:foreground="@drawable/border_black"
                android:padding="2dp"
                android:text="DataCriacao"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.244" />



            <TextView
                android:id="@+id/detailed_Vagas_Desc"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="215dp"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                android:foreground="@drawable/border_black"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:text="Descricao"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailed_Iv_Image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.37" />

            <ImageButton
                android:id="@+id/bt_detalied_Editar_Vaga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/baseline_edit_24" />

            <ImageButton
                android:id="@+id/bt_detailed_Eliminar_vaga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/baseline_delete_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_detailed_Vagas_Candidatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:text="Candidatar-me"
                    android:textSize="12dp"/>

                <Button
                    android:id="@+id/bt_detailed_Vagas_Candidaturas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:text="Ver Candidaturas"
                    android:textSize="12dp"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/detailed_Vaga_Titulo"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:layout_marginBottom="84dp"
            android:background="@android:color/transparent"
            android:foreground="@drawable/border_black"
            android:gravity="center"
            android:padding="2dp"
            android:text="Nome da Vaga"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:padding="2dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailed_Vaga_Titulo"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="162dp">

                <TextView
                    android:id="@+id/detailed_NomeUtilizador"
                    android:layout_width="147dp"
                    android:layout_marginStart="18dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:text="Responsável: " />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/main_menu"
        app:headerLayout="@layout/header"
        android:fitsSystemWindows="true"/>

</androidx.drawerlayout.widget.DrawerLayout>