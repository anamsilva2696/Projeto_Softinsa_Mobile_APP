<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/teste_1"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/menu_btn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerInside"
            android:contentDescription="@string/menu"
            android:src="@drawable/baseline_menu_24"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="293dp"
            android:layout_height="48dp"
            android:text="Ofertas/Vagas"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.737"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.018" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="443dp"
            android:layout_marginTop="160dp"
            android:layout_marginHorizontal="5dp"
            android:background="@android:color/transparent"
            android:foreground="@drawable/border_black"
            android:padding="2dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">



            <TextView
                android:id="@+id/detailed_Candidatura_Email"
                android:layout_width="287dp"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="95dp"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                android:foreground="@drawable/border_black"
                android:padding="2dp"

                android:text="Email"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.244" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:padding="2dp"
                android:text="Nome:"
                android:textAlignment="viewEnd"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailed_Candidatura_Nome"
                android:layout_width="287dp"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                android:foreground="@drawable/border_black"
                android:padding="2dp"
                android:text="Nome" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="15dp"
                android:padding="2dp"
                android:text="Email:"
                android:textAlignment="viewEnd"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="130dp"
                android:layout_marginEnd="15dp"
                android:padding="2dp"
                android:text="Nº de Telemóvel:"
                android:textAlignment="viewEnd"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailed_Candidatura_Telefone"
                android:layout_width="167dp"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="155dp"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                android:foreground="@drawable/border_black"
                android:padding="2dp"
                android:text="Telefone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.244" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="215dp"
                android:layout_marginTop="130dp"
                android:layout_marginEnd="15dp"
                android:padding="2dp"
                android:text="Data da Candidatura:"
                android:textAlignment="viewEnd"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailed_Candidatura_Data"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="215dp"
                android:layout_marginTop="155dp"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                android:foreground="@drawable/border_black"
                android:padding="2dp"
                android:text="Data"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.244" />

            <ImageButton
                android:id="@+id/bt_detailed_Eliminar_Candidatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/baseline_delete_24" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="190dp"
                android:layout_marginEnd="15dp"
                android:padding="2dp"
                android:text="Descrição:"
                android:textAlignment="viewEnd"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailed_Candidatura_Desc"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="215dp"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                android:foreground="@drawable/border_black"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:text="Descricao"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailed_Iv_Image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.37" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_detailed_Candidatura_Curriculo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_weight="1"
                    android:text="Currículo" />

                <Button
                    android:id="@+id/bt_detailed_Candidatura_Entrevista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_weight="1"
                    android:text="Entrevistas" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:padding="2dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="162dp">
                <TextView
                    android:id="@+id/detailed_Candidatura_Numero"
                    android:layout_width="147dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Nome"
                    android:textSize="26sp"
                    tools:layout_editor_absoluteX="5dp"
                    tools:layout_editor_absoluteY="-21dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/main_menu"
        app:headerLayout="@layout/header"
        android:fitsSystemWindows="true"/>

</androidx.drawerlayout.widget.DrawerLayout>